<%= form_for @message, remote: true do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>

      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Type a message"%>
  </div>
  <%= f.hidden_field :chatroom_id, value: chatroom_id %>
  <div class="actions message_send_button">
    <%= f.submit %>
  </div>
<% end %>